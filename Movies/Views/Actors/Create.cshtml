@model Actor

@{ 
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="custom-control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" placeholder="Actors Profile Picture"/>
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="custom-control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger" placeholder="Actors Full Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="custom-control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger" placeholder="Actors Biography"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success float-right" />
                    <a class="btn btn-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
            </div>
        </div>
</div>

@section scripts {
<script>
    $("#ProfilePictureURL").on("change", function () {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $(this).Val();
    })
</script>
}